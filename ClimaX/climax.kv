<Programa>:
    orientation: "vertical"
    

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: (root.fundo)

    ActionBar:
        pos_hint: {'top':1}
        background_color: 1, 1, 1, 0
            
        ActionView:
            ActionPrevious:
                title: "ClimaX - Feira de Santana"
                app_icon: ''
                with_previous: False

    
    GridLayout:
        id: "primeiro"
        cols: 2

        Label:
            id: "diaum"
            text: str(root.diaum)
            font_size: 65
            bold: True

        Label:
            id: "horaum"
            text: (root.horaum)
            bold: True
            font_size: 20

        Label:
            id: "dataum"
            text: (root.dataum)
            bold: True
            font_size: 25
            pos_hint: {"top": .7}

        Label:
            id: "tempum"
            text: str(root.tempum) + " °C"
            bold: True
            font_size: 40

        Label:
            id: "desc"
            text: str(root.desc)
            bold: True

        Label:
            id: "con"
            text: "Condi: " + str(root.condium)
            bold: True

    GridLayout:
        id: "seg"
        cols: 2

        Label:
            text: "Max: " + str(root.maxum) + " °C"
            bold: True
            font_size: 20

        Label:
            text:"Min: " + str(root.minum) + " °C"
            bold: True
            font_size: 20

    GridLayout:
        cols: 1

        Label:
            text: ""

    GridLayout:
        cols: 1

        Label:
            text: "Maze technologies Inc."
            bold: True
            font_size: 22

    
